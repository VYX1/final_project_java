<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="teamc.PrimaryController">
   <children>
      <Label text="SNAKE ARENA" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #00ff00;">
         <padding>
            <Insets bottom="30.0" />
         </padding>
      </Label>
      <Button fx:id="playButton" text="Play" onAction="#startGame" />
      <Button fx:id="settingsButton" text="Settings" onAction="#switchToSettings" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
